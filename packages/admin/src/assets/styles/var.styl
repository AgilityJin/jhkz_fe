$base-font-size := 14px
$cn-max-font-size := 18px
$base-font-family := "Microsoft YaHei", Arial, Verdana, Tahoma
$base-line-height := 1.15

$base-font-color := '#424242'
$divider-color := '#f5f5f5'
$tips-color := '#bdbdbd'
$title-color := '#212121'

$info-color := '#2196F3'
$success-color := '#4CAF50'
$warning-color := '#FFC107'
$error-color := '#f44336'

$theme-color := '#4395ff'

// 加深颜色
darken-color($color, $darken = 10%) {
  darken($color, $darken)
};

// 提亮
lighten-color($color, $darken = 10%) {
  lighten($color, $darken)
};

// 饱和度增加
saturate-color($color, $darken = 10%) {
  saturate($color, $darken)
};

// 饱和度降低
desaturate-color($color, $darken = 10%) {
  saturate($color, $darken)
};
