.max-width {
  width 100%
}

.pointer {
  cursor pointer
}

+block(actions) {
  +element(nav) {
    line-height: 50px
  }
}

+block(table__default) {
  table, th, td {
    border: thin solid rgba(0, 0, 0, 0.12)
  }
  .v-data-table-header {
    background: #f5f5f5
  }
  .v-data-table__empty-wrapper {
    td {
      text-align: center
    }
  }
}
